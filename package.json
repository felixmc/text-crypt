{
  "name": "TextCrypt",
  "version": "1.0.0",
  "description": "A minimal encrypted text editor",
  "main": "main/index.js",
  "scripts": {
    "start": "electron build/main",
    "start:dev": "electron src/main/index.js",
    "build": "npm build:main && npm build:renderer",
    "build:main": "webpack --progress --color --config=src/main/webpack.config.js",
    "build:main:watch": "webpack --progress --color --watch --config=src/main/webpack.config.js",
    "build:renderer": "webpack --progress --color --config=src/renderer/webpack.config.js",
    "build:renderer:watch": "webpack --progress --color --watch --config=src/renderer/webpack.config.js"
  },
  "repository": "https://github.com/felixmc/text-crypt",
  "keywords": [
    "electron",
    "react"
  ],
  "author": "Felix Milea-Ciobanu",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-import": "^1.6.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "less-vars-to-js": "^1.2.0",
    "style-loader": "^0.18.2",
    "webpack": "^2.7.0"
  },
  "dependencies": {
    "antd": "^2.13.4",
    "brace": "^0.10.0",
    "electron": "~1.7.8",
    "electron-debug": "^1.4.0",
    "electron-default-menu": "^1.0.1",
    "electron-localshortcut": "^2.0.2",
    "openpgp": "^2.5.11",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-ace": "^5.2.1",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0"
  }
}
